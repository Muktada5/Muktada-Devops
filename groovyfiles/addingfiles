pipeline {
    agent any
    stages {
        stage ("user creation") {
            steps {
                sh "sudo useradd devops"
            }
        }
        stage ("verify") {
            steps {
                echo "user has been created"
            }
        }
        stage ("user list") {
            steps {
                sh "cat /etc/passwd"
            }
        }
    }
}
